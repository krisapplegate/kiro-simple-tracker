{
  "name": "location-tracker",
  "version": "1.0.0",
  "description": "Multi-tenant location tracking application",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon backend/server.js",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run --config tests/vitest.config.js",
    "test:unit:watch": "vitest --config tests/vitest.config.js",
    "test:unit:coverage": "vitest run --coverage --config tests/vitest.config.js",
    "test:integration": "npm run test:api && npm run test:ui",
    "test:api": "vitest run tests/integration/rbac-api.test.js --config tests/vitest.config.js",
    "test:ui": "playwright test --config tests/playwright.config.js",
    "test:ui:headed": "playwright test --headed --config tests/playwright.config.js",
    "test:ui:debug": "playwright test --debug --config tests/playwright.config.js",
    "test:rbac": "npm run test:unit tests/unit/rbac.test.js && npm run test:api",
    "test:setup": "./docker-start.sh dev && sleep 10",
    "test:cleanup": "./docker-start.sh stop"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "leaflet": "^1.9.4",
    "react-leaflet": "^4.2.1",
    "@tanstack/react-query": "^4.24.4",
    "tailwindcss": "^3.2.4",
    "lucide-react": "^0.303.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "pg": "^8.8.0",
    "dotenv": "^16.0.3",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.1.0",
    "vite": "^4.1.0",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@playwright/test": "^1.40.0",
    "supertest": "^6.3.3",
    "jest": "^29.7.0"
  }
}